rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Burnout forecasts - users can only access their own forecasts
    match /burnout_forecasts/{forecastId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Wellness signals - users can only access their own signals
    match /wellness_signals/{signalId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Daily check-ins - users can only access their own check-ins
    match /daily_checkins/{checkinId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Meetings daily aggregates - users can only access their own docs
    match /meetings_daily/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Forecast configuration - read-only for authenticated users
    match /forecast_config/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can modify config
    }
  }
} 