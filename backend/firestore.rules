rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Burnout forecasts - users can only access their own forecasts
    match /burnout_forecasts/{forecastId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Wellness signals - users can only access their own signals
    match /wellness_signals/{signalId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Forecast configuration - read-only for authenticated users
    match /forecast_config/{configId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can modify config
    }
  }
} 